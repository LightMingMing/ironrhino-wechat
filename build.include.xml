<?xml version="1.0" encoding="utf-8"?>
<project>

	<property name="dist.jar.name" value="ironrhino-wechat-${version}.jar" />
	<property name="dist.jar-sources.name" value="ironrhino-wechat-${version}-sources.jar" />
	<property name="dist.jar.includes" value="org/ironrhino/*wechat/**,com/qq/**,resources/view/**" />

	<target name="pre-jar">
		<delete file="${target.dir}/${dist.jar.name}" />
	</target>

	<target name="post-jar">
		<jar jarfile="${target.dir}/${dist.jar.name}" basedir="${classes.dir}" includes="${dist.jar.includes}" />
		<jar jarfile="${target.dir}/${dist.jar-sources.name}" basedir="${src.dir}" includes="${dist.jar.includes}" />
	</target>

</project>